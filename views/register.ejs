<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <div class="container">
        <div align="center">
          <a class="brand"
            ><img
              src="https://i0.wp.com/cursosantosdumont.org.br/wp-content/uploads/2020/03/CASD.png?fit=600%2C211&ssl=1"
              width="250px"
          /></a>
        </div>
        <br />
        <h1 class="text-center mb-3">
          <i
            style="font-size: 36px; color: #f9b342"
            class="fas fa-user-plus"
          ></i>
          <font color="#3192B3"><font face="Montserrat">Registrar</font></font>
        </h1>
        <% include ./partials/messages %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Nome</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Seu Nome"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Seu Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="CPF">CPF</label>
            <input
              type="CPF"
              id="CPF"
              name="CPF"
              class="form-control"
              placeholder="Seu CPF"
              value="<%= typeof CPF != 'undefined' ? CPF : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Senha</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Sua Senha"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirmar Senha</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirmar Senha"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-info btn-block">
            Registrar
          </button>
        </form>
        <p class="lead mt-4">
          JÃ¡ possui uma conta? <a href="/users/login">Entrar</a>
        </p>
      </div>
    </div>
  </div>
</div>
